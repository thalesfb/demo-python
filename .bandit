[bandit]
# Bandit configuration file
# This file configures Bandit's security analysis behavior

# Severity levels: LOW, MEDIUM, HIGH
# Confidence levels: LOW, MEDIUM, HIGH

# Exclude specific tests if needed (commented out for now)
# exclude: B101,B601

# Set minimum severity level to report
severity: LOW

# Set minimum confidence level to report
confidence: LOW

# Skip specific directories (apenas ambiente virtual e cache)
exclude_dirs: [.venv, venv, __pycache__]

# Include specific files and directories
include: [server/, Dockerfile, requirements.txt, Pipfile]

# Output format
output_format: json

# Generate report
output_file: bandit-report.json
